<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ChangeAlbumNameFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="그룹 이름 변경하기"
        android:textSize="32dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="28dp"
        android:textColor="#766563" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경할 그룹 이름을 입력하세요."
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="28dp"
        android:textColor="#766563" />

    <EditText
        android:id="@+id/renew_gpname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:paddingLeft="10dp"
        android:hint="변경할 그룹 이름"
        android:background="@drawable/enroll_edittext_style"
        android:textColorHint="@color/browncolor"
        android:textSize="18dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="20dp"
            android:id="@+id/nch_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white"
            android:text="변경취소"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/browncolor"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_margin="20dp"
            android:id="@+id/ch_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_pink"
            android:text="변경하기"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/browncolor"/>

    </LinearLayout>

</LinearLayout>
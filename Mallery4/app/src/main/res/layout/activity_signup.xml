<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".SignupActivity">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/deco" />

    <TextView
        android:id="@+id/logo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/login_logo"
        android:textColor="@color/browncolor"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/enroll_edittext_style"
            android:hint="아이디"
            android:paddingLeft="10dp"
            android:textColorHint="@color/browncolor"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/check_btn"
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_pink"
            android:text="중복확인"
            android:textSize="12dp"
            android:textColor="@color/browncolor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/enroll_edittext_style"
            android:hint="비밀번호 (영문+숫자 조합 6자리 이상)"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColorHint="@color/browncolor"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:id="@+id/setImage"/>
    </LinearLayout>

    <EditText
        android:id="@+id/signup_hp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:paddingLeft="10dp"
        android:background="@drawable/enroll_edittext_style"
        android:hint="핸드폰번호"
        android:textColorHint="@color/browncolor"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/signup_nickname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:paddingLeft="10dp"
        android:background="@drawable/enroll_edittext_style"
        android:hint="닉네임"
        android:textColorHint="@color/browncolor"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enroll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/rounded_pink"
        android:text="회원가입"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/browncolor"/>

</LinearLayout>